  { "match": "cuero", "reaction": "🧚‍♀️" },
  { "match": "klk", "reaction": "🇩🇴" },
  { "match": "barry", "reaction": "🍄" },
];

module.exports = {
  name: "reaction",
  description: "Reacciona a mensajes específicos",
  handle: async ({ message, sendReaction }) => {
    const text = message.body.toLowerCase();
    const reaction = reactions.find((reaction) => reaction.match === text);
    if (reaction) {
      await sendReaction(reaction.reaction);
    }
  },
};